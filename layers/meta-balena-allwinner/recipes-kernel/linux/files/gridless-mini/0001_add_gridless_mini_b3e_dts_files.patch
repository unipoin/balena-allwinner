+#include <dt-bindings/input/input.h>
+#include <dt-bindings/gpio/gpio.h>
+
+/ {
+	aliases {
+		i2c0 = &i2c0;
+	};
+
+	leds {
+		compatible = "gpio-leds";
+
+		status1 {
+			label = "gl_mini_green_status1";
+			gpios = <&pio 0 17 GPIO_ACTIVE_HIGH>; /* PA17 */
+			default-state = "on";
+		};
+
+		status2 {
+			label = "gl_mini_green_status2";
+			gpios = <&pio 0 6 GPIO_ACTIVE_HIGH>; /* PA6 */
+			default-state = "off";
+		};
+
+		status3 {
+			label = "gl_mini_green_status3";
+			gpios = <&pio 0 21 GPIO_ACTIVE_HIGH>; /* PA21 */
+			default-state = "off";
+		};
+
+		status4 {
+			label = "gl_mini_green_status4";
+			gpios = <&pio 0 20 GPIO_ACTIVE_HIGH>; /* PA20 */
+			default-state = "off";
+		};
+
+		heartbeat {
+			label = "gl_mini_red_heartbeat";
+			gpios = <&pio 0 19 GPIO_ACTIVE_HIGH>; /* PA19 */
+			linux,default-trigger = "heartbeat";
+		};
+	};
+
+	button {
+		compatible = "gpio-keys";
+
+		button {
+			label = "CONFIG";
+			linux,code = <KEY_CONFIG>;
+			gpios = <&pio 0 18 GPIO_ACTIVE_LOW>; /* PA18 */
+		};
+	};
+};
+
+&i2c0 {
+	status = "okay";
+
+	rtc1: pcf8523@68 {
+		compatible = "nxp,pcf8523";
+		status = "okay";
+		reg = <0x68>;
+	};
+
+	lm75b@49 {
+		compatible = "national,lm75b";
+		status = "okay";
+		reg = <0x49>;
+	};
+};
+
+&ehci3 {
+	non-removable-ports = <1>;
+	status = "okay";
+
+	#address-cells = <1>;
+	#size-cells = <0>;
+
+	wireless-controller@1 {
+		compatible = "usbbda,b720";
+		reg = <1>;
+
+		#address-cells = <2>;
+		#size-cells = <0>;
+
+		bluetooth@0 {
+			compatible = "usbifbda,b720.config1.0";
+			reg = <0 1>;
+			status = "disabled";
+		};
+
+		bluetooth@1 {
+			compatible = "usbifbda,b720.config1.1";
+			reg = <1 1>;
+			status = "disabled";
+		};
+	};
+};
+&ohci3 {
+	status = "okay";
+};
