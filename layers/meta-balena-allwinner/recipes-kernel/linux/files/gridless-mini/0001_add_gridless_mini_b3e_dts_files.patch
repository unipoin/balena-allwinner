+/ {
+	aliases {
+		serial0 = &uart0;
+		serial1 = &uart1;
+		serial2 = &uart2;
+		serial3 = &uart3;
+		ethernet0 = &emac;
+		i2c0 = &i2c0;
+		watchdog0 = &wdt0;
+	};
+
+	chosen {
+		stdout-path = "serial0:115200n8";
+	};
+
+	reg_usb_vbus: usb-vbus {
+		compatible = "regulator-fixed";
+		regulator-name = "usb-vbus";
+		regulator-min-microvolt = <5000000>;
+		regulator-max-microvolt = <5000000>;
+		enable-active-high;
+		gpio = <&pio 0 10 GPIO_ACTIVE_HIGH>; /* PA10 */
+	};
+};
+
+&i2c0 {
+	status = "okay";
+
+	eeprom@50 {
+		compatible = "atmel,24c02";
+		reg = <0x50>;
+		pagesize = <8>;
+//		read-only;
+	};
+
+	lm75b@48 {
+		compatible = "national,lm75b";
+		status = "okay";
+		reg = <0x48>;
+	};
+};
+
+&mmc0 {
+	vmmc-supply = <&reg_vcc3v3>;
+	bus-width = <4>;
+	cd-gpios = <&pio 5 6 GPIO_ACTIVE_LOW>;
+	status = "okay";
+};
+
+&emac {
+	status = "okay";
+	fixed-link {
+		speed = <100>;
+		full-duplex;
+	};
+};
+
+&spi1 {
+	status = "okay";
+	pinctrl-names = "default";
+	pinctrl-0 = <&spi1_pins>;
+	assigned-clocks = <&ccu CLK_SPI1>;
+	assigned-clock-rates = <600000000>;
+
+	switch@0 {
+		compatible = "microchip,ksz8795";
+		reg = <0>;
+
+		spi-max-frequency = <20000000>;
+		reset-gpios = <&pio 0 8 GPIO_ACTIVE_LOW>; /* PA8 */
+		status = "okay";
+		ports {
+			#address-cells = <1>;
+			#size-cells = <0>;
+			port@0 {
+				reg = <0>;
+				label = "cpu";
+				ethernet = <&emac>;
+				fixed-link {
+					speed = <100>;
+					full-duplex;
+				};
+			};
+			port@1 {
+				reg = <1>;
+				label = "lan2";
+			};
+			port@2 {
+				reg = <2>;
+				label = "lan3";
+			};
+			port@3 {
+				reg = <3>;
+				label = "lan4";
+			};
+			port@4 {
+				reg = <4>;
+				label = "lan5";
+			};
+		};
+	};
+};
+
+&ehci0 {
+       status = "okay";
+};
+
+&ohci0 {
+       status = "okay";
+};
+
+&ehci1 {
+       status = "okay";
+};
+
+&ohci1 {
+       status = "okay";
+};
+
+&ehci2 {
+	status = "okay";
+};
+
+&ohci2 {
+	status = "okay";
+};
+
+&usb_otg {
+       status = "okay";
+       dr_mode = "host";
+};
+
+&usbphy {
+	usb0_vbus-supply = <&reg_usb_vbus>;
+       usb1_vbus-supply = <&reg_usb_vbus>;
+       usb2_vbus-supply = <&reg_usb_vbus>;
+	status = "okay";
+};
+
+&uart0 {
+       status = "okay";
+};
+
+&uart1 {
+	pinctrl-names = "default";
+	pinctrl-0 = <&uart1_pins>;
+	rts-gpios = <&r_pio 0 7 GPIO_ACTIVE_HIGH>; /* PL7 */
+	linux,rs485-enabled-at-boot-time;
+	rs485-rts-active-high;
+	rs485-rts-delay = <0 0>;
+	status = "okay";
+};
+
+&uart2 {
+	pinctrl-names = "default";
+	pinctrl-0 = <&uart2_pins>;
+	rts-gpios = <&pio 0 3 GPIO_ACTIVE_HIGH>; /* PA3 */
+	linux,rs485-enabled-at-boot-time;
+	rs485-rts-active-high;
+	rs485-rts-delay = <0 0>;
+	status = "okay";
+};
+
+&rtc {
+	status = "disabled";
+};
+
